// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  firstName String?
  lastName String?
  password String
  forms Form[]
  formResponses Response[]
}

model Form {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  isOpen      Boolean   @default(false)
  authorId    Int
  author      User      @relation(fields: [authorId], references: [id])
  questions   Question[]
  startDate   DateTime?
  endDate     DateTime?
  responses   Response[]
  link        String    @unique
}

model Question {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  type        String
  formId      Int
  form        Form      @relation(fields: [formId], references: [id])
  options     Option[]
  questionType QuestionType @default(TEXT)
  answer     Answer?
  answerId   Int
}

enum QuestionType {
  TEXT
  MULTIPLE_CHOICE
  CHECKBOX
}

model Answer {
  id          Int       @id @default(autoincrement())
  questionId  Int     @unique
  question    Question  @relation(fields: [questionId], references: [id])
}

model Option {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  questionId  Int
  question    Question  @relation(fields: [questionId], references: [id])
}

model Response {
  id          Int       @id @default(autoincrement())
  userId      Int
  formId      Int
  answer      String
  user        User      @relation(fields: [userId], references: [id])
  form        Form      @relation(fields: [formId], references: [id])
}