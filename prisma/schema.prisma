// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String     @id 
  email String  @unique
  firstName String?
  lastName String?
  forms Form[]
  formResponses Response[]
}

model Form {
  id          Int       @id @default(autoincrement())
  title       String
  formImage       String?
  description String?
  isOpen      Boolean   @default(false)
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  questions   Question[]
  startDate   DateTime?
  endDate     DateTime?
  responses   Response[]
  link        String    @unique
}

model Question {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  formImage       String?
  formId      Int
  form        Form      @relation(fields: [formId], references: [id])
  options     Option[]
  isRequired  Boolean   @default(true)
  questionType QuestionType @default(TEXT)
  answer     Int[]
}

enum QuestionType {
  TEXT
  MULTIPLE_CHOICE
  SINGLE_CHOICE
}


model Option {
  id          Int       @id @default(autoincrement())
  title       String
  questionId  Int
  question    Question  @relation(fields: [questionId], references: [id])
}

model Response {
  id          Int       @id @default(autoincrement())
  userId      String
  formId      Int
  user        User      @relation(fields: [userId], references: [id])
  form        Form      @relation(fields: [formId], references: [id])
}